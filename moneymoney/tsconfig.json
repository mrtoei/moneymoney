/*
  This is a "Solution Style" tsconfig.json file, and is used by editors and TypeScriptâ€™s language server to improve development experience.
  It is not intended to be used to perform a compilation.

  To learn more about this file see: https://angular.io/config/solution-tsconfig.
*/
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "module": "es2020",
    "types": [],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@cModel/*": ["./src/app/_common/models/*"],
      "@cComponents/*": ["./src/app/_common/components/*"],
      "@cUtil/*": ["./src/app/_common/util/*"],
      "@cxFunc": ["./src/app/_common/util/xfunction"],
      "@env": ["./src/environments/environment.ts"],
      "@components/*": ["./src/app/components/*"],
      "@routers/*": ["./src/app/routers/*"],
      "@services/*": ["./src/app/services/*"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": false
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  }
}
